<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Positive_Counter</fullName>
    <active>true</active>
    <errorConditionFormula>Counter__c &lt; 0</errorConditionFormula>
    <errorDisplayField>Counter__c</errorDisplayField>
    <errorMessage>Counter must be positive number</errorMessage>
</ValidationRule>
